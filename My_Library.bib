  author = {Haslbauer, Moritz and Kroupa, Pavel and Jerabkova, Tereza},
  date = {2023-07-24},
  journaltitle = {Monthly Notices of the Royal Astronomical Society},
  volume = {524},
  number = {3},
  eprint = {2306.16436},
  eprinttype = {arXiv},
