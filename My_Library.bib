  author = {Gladders, Michael D. and Oemler, Augustus and Dressler, Alan and Poggianti, Bianca and Vulcani, Benedetta and Abramson, Louis},
  date = {2013-05-24},
  journaltitle = {The Astrophysical Journal},
  shortjournal = {ApJ},
