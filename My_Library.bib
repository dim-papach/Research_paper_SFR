@article{eappenFormationEarlytypeGalaxies2022,
  title = {The Formation of Early-Type Galaxies through Monolithic Collapse of Gas Clouds in {{Milgromian}} Gravity},
  author = {Eappen, Robin and Kroupa, Pavel and Wittenburg, Nils and Haslbauer, Moritz and Famaey, Benoit},
  date = {2022-09-01},
  journaltitle = {Monthly Notices of the Royal Astronomical Society},
  volume = {516},
  number = {1},
  eprint = {2209.00024},
  eprinttype = {arXiv},
