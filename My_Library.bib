  keywords = {Astrophysics - Astrophysics of Galaxies,Astrophysics - Cosmology and Nongalactic Astrophysics},
  file = {/home/dp/Zotero/storage/L2RXCZPV/Eappen et al. - 2022 - The formation of early-type galaxies through monol.pdf}
}

@article{gladdersIMACSCLUSTERBUILDING2013,
